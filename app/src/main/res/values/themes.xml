<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HelloToast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/azulito</item>
        <item name="actionBarStyle">@style/MyCustomActionBar</item>
    </style>

    <style name="MyCustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/azulitoDark</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
    </style>

    <style name="ActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.HelloToast" parent="Base.Theme.HelloToast" />
</resources>